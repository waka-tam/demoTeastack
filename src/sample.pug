extend /_template/_layout

append variables
  //- 変更可能
  - var pageTitle= "";
  - var pageDescription= site.description;
  - var pageKeywords= site.keywords;
  //- 任意
  - var pageOgpTitle= pageTitle;
  - var pageOgpImage= site.ogpImage;
  - var pageOgpType= "website";

block content
  nav(aria-label="Breadcrumb")
    +breadcrumb([
      ["ホーム", "/"],
      ["サンプル", "/sample.html"]
    ])
  main#sample
    .wrapper
      h1 サンプル
      +picture("https://placehold.jp/300x300.png", "サンプル").responsiveImage
        +source(lg, "https://placehold.jp/600x600.png")
        +source(md, "https://placehold.jp/500x500.png")
      //- レスポンシブ画像
      .c-media
        figure.c-media__img-wrapper
          img(src="https://placehold.jp/640x300.png", srcset="https://placehold.jp/1280x600.png 2x, https://placehold.jp/1920x900.png 3x" alt="サンプル画像")
        .c-media__body
          h3.c-media__ttl テキストメディア画像
          p.c-media__txt この文章はダミーです。文字の大きさ、量、字間、行間等を確認するために入れています。
          p.c-media__txt これはテキストメディア画像モジュールのサンプルです。
